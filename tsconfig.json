{
  "compilerOptions": {
    "target": "ESNext",                            // Use the latest ECMAScript version
    "module": "ESNext",                            // Use ESM module system
    "moduleResolution": "node",                    // Resolves modules like Node.js
    "esModuleInterop": true,                       // Allows importing of CommonJS modules
    "skipLibCheck": true,                          // Skips checking declaration files for types
    "allowSyntheticDefaultImports": true,          // Allows synthetic default imports (for CommonJS)
    "allowImportingTsExtensions": true,            // Allows importing TypeScript files with .ts extensions
    "resolveJsonModule": true,                     // Allows importing of JSON files
    "strict": true,                                // Enables strict type-checking options
    "noEmit": true                                 // Ensures no JS files are generated (since you're using ts-node)
  },
  "include": [
    "*"                                 // Include TypeScript files in the src folder
  ],
  "exclude": [
    "node_modules"                                // Exclude node_modules
  ],
  "ts-node": {
    "esm": true
  }
}
